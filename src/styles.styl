.main
  // background: #311a99
  background: #302931

.left-section
  background: #5c3972

.row
  padding-top: 2px
  padding-bottom: 2px

input::placeholder
  color: rgba(255, 255, 255, 0.35)

input
  font-family: 'Ubuntu', sans-serif;
  background: transparent
  color: white
  border: none
  border-bottom: 1px rgba(255, 255, 255, 0.8) solid
  font-size: 16px
  padding-left: 7px
  padding-right: 7px
  // padding-top: 10px


input:focus
  // animation: PulseAttention 0.001s cubic-bezier(.215, .61, .355, 1) forwards infinite;
  outline-width: 0

@keyframes PulseAttention
  1%
    border-color: transparent;


.label-field
  font-family: 'Ubuntu', sans-serif;
  color: white
  border: none
  font-size: large
  padding-left: 13px
  text-align: left

button
  border: none
  background: rgba(1, 1, 1, 0)
  color: rgba(255, 255, 255, 0.6)

button:hover
  background: rgba(255, 255, 255, 0.2)
  transition: 0.2s

button:focus
  outline: none

::-webkit-scrollbar
  width: 10px

::-webkit-scrollbar-track
  background: #f1f1f1

::-webkit-scrollbar-thumb
  background: #888

::-webkit-scrollbar-thumb:hover
  background: #555

